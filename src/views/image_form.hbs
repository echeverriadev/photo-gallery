<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form enctype="multipart/form-data" action="/image/add" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Image title"> 
                    </div>
                    <div class="form-group">
                        <textarea type="text" name="description" class="form-control" placeholder="Image description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" clas="custom-file-label"> Choose file</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">Upload photo</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>Title</tr>
                <tr>Description</tr>
                <tr>Operations</tr>
            </thead>
            <tbody>
                {{#each photos}}
                    <tr>
                         <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>
                            <a href="{{imageURL}}" class="btn btn-primary" target="_blank">View</a>
                            <a href="" class="btn btn-danger">Delete</a>
                        </td> 
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>